

<div class="container" id="header">
  <i class="fa fa-twitter" aria-hidden="true"></i><%= link_to 'Home', new_user_session_path %>
</div>

<div class="col-lg-3" id="desc">
  <h1>Welcome to Twitter.</h1>
  <br>
  <p>Connect with your friends â€” and other fascinating people. Get in-the-moment updates on the things that interest you. And watch events unfold, in real time, from every angle.</p>
</div>

<div class="container" id="forms">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :login, placeholder: "Email or username", autofocus: true %>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :username, placeholder: "Username", autofocus: true %>
  </div>
  <br>
  
  <div class="field">
    <%= f.text_field :name, placeholder: "Full name", autofocus: true %>
  </div>
  <br>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true %> 
  </div>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>

